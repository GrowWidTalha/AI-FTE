# AI Employee Environment Variables
# Copy this file to .env and fill in your values

# Vault Configuration
VAULT_PATH=/mnt/d/class/AI_EMPLOYEE_FTE

# Gmail API Configuration (Silver Tier)
GMAIL_CREDENTIALS=./credentials.json
GMAIL_TOKEN=./token.json
GMAIL_INTERVAL=120
GMAIL_QUERY=is:unread is:important

# WhatsApp Configuration (Silver tier)
WHATSAPP_SESSION_PATH=./whatsapp_session
WHATSAPP_INTERVAL=30
WHATSAPP_KEYWORDS=urgent,asap,invoice,payment,help,pricing

# File System Watcher
WATCH_FOLDER=/mnt/d/class/AI_EMPLOYEE_FTE/Inbox
WATCH_INTERVAL=5

# Development Settings
DEV_MODE=true
DRY_RUN=true
LOG_LEVEL=INFO

# Rate Limiting
MAX_EMAILS_PER_HOUR=10
MAX_ACTIONS_PER_HOUR=20

# Social Media (Gold Tier)
LINKEDIN_ACCESS_TOKEN=
FACEBOOK_ACCESS_TOKEN=
TWITTER_API_KEY=
INSTAGRAM_ACCESS_TOKEN=
